<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.auth.PasswordResetSecondActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="293dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        app:srcCompat="@drawable/password3" />

    <EditText
        android:id="@+id/NewPassword"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:hint="Enter your new password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:layout_constraintBottom_toTopOf="@+id/ResetPasswordSecond"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/otpReset"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:hint="Enter the 4 digits OTP
"
        android:inputType="number"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ResetPasswordSecond"
        android:layout_width="339dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:cornerRadius="28dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Reset Password"
        android:textColor="#000000"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="New password"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#868686"
        app:layout_constraintBottom_toTopOf="@+id/NewPassword"
        app:layout_constraintStart_toStartOf="@+id/NewPassword" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#868686"
        android:text="Confirm password"
        app:layout_constraintBottom_toTopOf="@+id/ConfirmPassword"
        app:layout_constraintStart_toStartOf="@+id/ConfirmPassword" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="OTP"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="#868686"
        app:layout_constraintBottom_toTopOf="@+id/otpReset"
        app:layout_constraintStart_toStartOf="@+id/otpReset" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Enter the OTP sent to your email address \n and create a new password."
        android:textColor="#868686"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
</androidx.constraintlayout.widget.ConstraintLayout>