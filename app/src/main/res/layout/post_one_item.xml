<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- User Profile -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- User Profile Picture -->

        <!-- User Name and Post Date -->

        <ImageView
            android:id="@+id/profile_picture_post_one"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_place_holder" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_post_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="John Doe"
                android:textColor="@color/Text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/time_post_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="May 11, 2023"
                android:textColor="@color/Secondary_text"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>


    <!-- Post Description -->
    <TextView
        android:id="@+id/description_post_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:paddingLeft="16dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin vitae bibendum odio, non venenatis tellus. Nullam ut mollis ipsum, eu mollis risus." />

    <!-- Post Image -->


    <ImageView
        android:id="@+id/post_image_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/cover_placeholder2"
        android:adjustViewBounds="true"/>

    <!-- Like Button and Like Count -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <!-- Like Button -->
        <ImageView
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_favorite_border_24"
            android:onClick="onLikeButtonClicked"/>

        <!-- Like Count -->
        <TextView
            android:id="@+id/likes_post_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="0"
            android:textSize="16sp" />
        <!-- Your ImageButton -->


    </LinearLayout>

</LinearLayout>
