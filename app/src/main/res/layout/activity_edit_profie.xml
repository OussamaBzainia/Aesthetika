<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.auth.EditProfieActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Full name"
        android:textColor="#868686"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/FullNameEdit"
        app:layout_constraintEnd_toEndOf="@+id/FullNameEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/FullNameEdit" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Username"
        android:textColor="#868686"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/UsernameEdit"
        app:layout_constraintEnd_toEndOf="@+id/UsernameEdit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/UsernameEdit" />

    <EditText
        android:id="@+id/FullNameEdit"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:text=""
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:boxStrokeWidth="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/UsernameEdit"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:text=""
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:boxStrokeWidth="5dp"
        app:layout_constraintBottom_toTopOf="@+id/UpdateButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ProfilePicEditProfile"
        android:layout_width="189dp"
        android:layout_height="184dp"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_place_holder" />

    <ImageButton
        android:id="@+id/EditPhoto"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded__image_button"
        android:backgroundTint="#FF9679"
        app:layout_constraintBottom_toBottomOf="@+id/ProfilePicEditProfile"
        app:layout_constraintEnd_toEndOf="@+id/ProfilePicEditProfile"
        app:srcCompat="@drawable/outline_edit_24" />

    <Button
        android:id="@+id/UpdateButton"
        android:layout_width="339dp"
        android:layout_height="70dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/montserrat"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>