<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".view.auth.SignUpActivity">


    <TextView
        android:id="@+id/LetsGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:text="Let's Get Started"
        android:textColor="#000000"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.435"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <Button
        android:id="@+id/SignUpButton"
        android:layout_width="339dp"
        android:layout_height="70dp"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="19dp"
        android:text="Sign up"
        android:fontFamily="@font/montserrat"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="239dp"
        android:layout_height="26dp"
        android:layout_marginStart="38dp"

        android:layout_marginBottom="40dp"
        android:fontFamily="@font/montserrat"
        android:text="Already have an account ?"
        android:textColor="@color/Text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="116dp"
        android:text="I accept the terms and conditions"
        android:textColor="@color/Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordSignUp" />

    <TextView
        android:id="@+id/PasswordSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="267dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Password"
        android:textColor="#868686"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/PasswordSignUp"
        app:layout_constraintTop_toBottomOf="@+id/UserName" />

    <EditText
        android:id="@+id/PasswordSignUp"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:boxStrokeWidth="5dp"
        app:layout_constraintBottom_toTopOf="@+id/checkBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PasswordSignUpTitle" />

    <EditText
        android:id="@+id/EmailAdress"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:hint="Enter your email address"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:boxStrokeWidth="5dp"
        app:layout_constraintBottom_toTopOf="@+id/UserNameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/EmailSignUpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="302dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Email"
        android:textColor="#868686"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/EmailAdress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/EmailAdress" />

    <EditText
        android:id="@+id/FullName"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/edit_style"
        android:ems="10"
        android:hint="Enter your full name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:boxStrokeWidth="5dp"
        app:layout_constraintBottom_toTopOf="@+id/EmailSignUpTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/UserName"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/edit_style"
        android:ems="10"

        android:hint="Enter your username"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:textColorHint="@color/TextField_title"
        app:boxStrokeColor="@color/Secondary_actions"
        app:boxStrokeWidth="5dp"
        app:layout_constraintBottom_toTopOf="@+id/PasswordSignUpTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserNameTitle" />

    <TextView
        android:id="@+id/FullNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Full name"
        android:textColor="#868686"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/FullName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/FullName"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/UserNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="262dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Username"
        android:textColor="#868686"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailAdress" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="42dp"
        android:fontFamily="sans-serif-medium"
        android:text="Login"
        android:textColor="@color/primary"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignUpButton"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Join our community and discover new experiences"
        android:textColor="@color/Secondary_text"
        app:layout_constraintBottom_toTopOf="@+id/FullNameTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LetsGetStarted"
        app:layout_constraintVertical_bias="0.066" />

</androidx.constraintlayout.widget.ConstraintLayout>